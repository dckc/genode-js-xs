<config verbose="yes" ld_verbose="yes">

    <parent-provides>
        <service name="ROM"/>
        <service name="LOG"/>
        <service name="RM"/>
        <service name="CPU"/>
        <service name="PD"/>
        <service name="Nitpicker"/>
        <service name="Timer"/>
    </parent-provides>

    <default-route>
		<any-service> <parent/> <any-child/> </any-service>
	</default-route>

    <start name="nit_fb" caps="110">
		<resource name="RAM" quantum="2M"/>
		<provides> <service name="Framebuffer"/> <service name="Input"/> </provides>
		<config/>
	</start>
    
    <start name="terminal" caps="110">
        <resource name="RAM" quantum="8M"/>
        <provides> <service name="Terminal"/> </provides>
        <route>
        <service name="ROM" label="config">
            <parent label="terminal.config"/> </service>
        <service name="Framebuffer"> <child name="nit_fb"/> </service>
        <service name="Input">       <child name="nit_fb"/> </service>
        <any-service> <parent/> </any-service>
        </route>
    </start>

    <start name="vfs" caps="100">
        <resource name="RAM" quantum="10M"/>
        <provides> <service name="File_system"/> </provides>
        <config>
            <vfs>
                <dir name="dev"> <terminal/> </dir>
            </vfs>
            <default-policy root="/" />
        </config>
        <route>
            <service name="Terminal"> <child name="terminal"/> </service>
            <any-service> <parent/> </any-service>
        </route>
    </start>

    <start name="hello" caps="100">
        <resource name="RAM" quantum="200M" />
        <libc stdout="/dev/log" stderr="/dev/log"
              rtc="/dev/null" />

        <vfs>
            <dir name="dev">
                <null/>
                <log/>
            </dir>
            <fs/>
        </vfs>

        <route>
            <service name="File_system"> <child name="vfs"/> </service>
        <any-service> <parent/> </any-service>
        </route>
    </start>

</config>
