<config verbose="yes">

    <parent-provides>
        <service name="ROM"/>
        <service name="LOG"/>
        <service name="RM"/>
        <service name="CPU"/>
        <service name="PD"/>
        <service name="Nitpicker"/>
        <service name="Timer"/>
    </parent-provides>

    <default-route>
		<any-service> <parent/> <any-child/> </any-service>
	</default-route>

    <start name="hello" caps="100">
        <resource name="RAM" quantum="200M" />
        <libc stdout="/dev/log" stderr="/dev/log"
              rtc="/dev/null" />

        <vfs>
            <dir name="dev">
                <null/>
                <log/>
            </dir>
            <fs/>
        </vfs>

        <route>
            <any-service> <parent/> </any-service>
        </route>
    </start>

</config>
